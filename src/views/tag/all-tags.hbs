<div class="card-columns">
<!-- <div class="row"> -->
  {{#each tags}}
  <!-- <div class="col-md-3"> -->
    <div class="card my-3">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          <a href="/tag/{{_id}}"> {{ tag }}</a> <a href="/tag/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
		<div class="ce-example form-group">
			<div class="ce-example__content _ce-example__content--small">
				<div id="{{_id}}" ></div>
				{{#note}}
            	<li>{{title}}</li>
				{{/note}}
			</div>		
			
		</div>			
        <!-- DELETE REQUEST -->
        <form action="/tag/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  <!-- </div> -->
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">There are not Notes yet.</p>
      <a href="/tag/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>