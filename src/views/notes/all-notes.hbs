    <div class="card my-3">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} 
    <div class="btn-group">
        <span class="nav-item dropdown">
            <a class="dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/notes/edit/{{_id}}">Edit</a>
              <a class="dropdown-item" href="/notes/add">Add A Note</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/users/logout">Logout</a>
            </div>
          </span>
    </div>
        </h4>
		<div class="ce-example form-group">
			<div class="ce-example__content _ce-example__content--small">
				<div id="{{_id}}" ></div>
			</div>
			<script>
				var data = {{{ description }}};
				var blocks = data.blocks;
				var editor = new EditorJS({
					readOnly: true,
					holder: '{{_id}}',
					tools: tool,
					i18n: il8n,
					data: {blocks},
					onReady: function(){
						editoronReady();
						//saveButton.click();
					},
					onChange: function() {
						console.log('something changed');
					}
				});
				</script>
		</div>
		  <!-- TAG -->
		<div class="form-group">
			<div class="post" id="taglist">
				<ul class="tags">
					{{#tag}}
		            <li><a href="#">{{tag}}</a></li>
					{{/tag}}
				</ul> 
			</div>
		</div>
		
		
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
        <div class="">
        <p class="card-text" style="text-align: initial;font-weight: bolder;font-size: x-small;">
        	{{ createdAt }}
        </p>
    </div>
      </div>
    </div>
  <!-- </div> -->
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">There are not Notes yet.</p>
      <a href="/notes/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
